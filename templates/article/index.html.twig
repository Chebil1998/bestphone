{% extends 'base.html.twig' %}

{% block body %}

{% for article in articles %}
<h2>{{article.nom}}</h2>
<p><h5>Ajouter le {{article.createdAt | date('d/m/y')}} à {{article.createdAt | date('H:i')}} dans la catégorie {{article.category.title}}</h5></p>
<p><h6>{{article.prix}} DT</h6><p>
<p>{{article.description}}<p>
	<a class="btn btn-primary" href="{{path('show_article', {'id': article.id})}}">Voir plus</a>
	<a class="btn btn-primary" href="{{path('edit_article', {'id': article.id})}}">Modifier</a>
	<a class="btn btn-primary" href="{{path('delete_article', {'id': article.id})}}">Supprimer</a>
    {% endfor %}

    <link rel="stylesheet" type="text/css" href="{{asset('css/index.css')}}">

{% endblock %}
